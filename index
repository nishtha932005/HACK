<!DOCTYPE html>
<html>
<head>
    <title>Phone Breach Detected!</title>
    <script>
        async function getUserInfo() {
            let response = await fetch("https://ipapi.co/json/");
            let data = await response.json();
            let userAgent = navigator.userAgent;
            let battery = await navigator.getBattery();
            let batteryLevel = Math.round(battery.level * 100) + "%";

            // Start scary sounds
            let audio = new Audio("https://www.soundjay.com/button/beep-10.mp3");
            audio.loop = true;
            audio.play();

            // Vibrate the phone
            setInterval(() => { navigator.vibrate(500); }, 2000);

            // Fake hack screen
            document.body.innerHTML = `
                <h1 style="color: red; text-align: center;">⚠️ SYSTEM BREACH DETECTED! ⚠️</h1>
                <p style="text-align: center;">🔍 Scanning your phone...</p>
                <p style="text-align: center;">📍 IP Address: <b>${data.ip}</b></p>
                <p style="text-align: center;">🌎 Location: <b>${data.city}, ${data.country_name}</b></p>
                <p style="text-align: center;">📶 Internet Provider: <b>${data.org}</b></p>
                <p style="text-align: center;">📱 Device Info: <b>${userAgent}</b></p>
                <p style="text-align: center;">🔋 Battery Level: <b>${batteryLevel}</b></p>
                <h2 style="color: red; text-align: center;">⚠️ DATA UPLOAD IN <span id="countdown">30</span> SECONDS!</h2>
                <p style="text-align: center; font-size: 20px;">💀 Dark Web Transfer in Progress... 💀</p>
            `;

            // Fake countdown timer
            let count = 30;
            let countdown = setInterval(() => {
                count--;
                document.getElementById("countdown").innerText = count;
                if (count === 0) {
                    clearInterval(countdown);
                    showFBIWarning();
                }
            }, 1000);
        }

        function showFBIWarning() {
            document.body.innerHTML = `
                <h1 style="color: white; background: red; padding: 20px; text-align: center;">🚔 FBI WARNING 🚔</h1>
                <p style="text-align: center; font-size: 20px;">Your device is under investigation for illegal activity!</p>
                <p style="text-align: center;">Please remain on this page while we verify your identity.</p>
                <br>
                <h2 style="color: red; text-align: center;">📢 AUTHORITIES HAVE BEEN NOTIFIED 📢</h2>
                <br>
                <p style="text-align: center;">Just kidding! 😂 But see how easy it is to get tricked? Be careful online!</p>
            `;
        }
    </script>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; background: black; color: red; padding: 50px; }
        .button { padding: 15px; background: red; color: white; border: none; font-size: 18px; cursor: pointer; }
    </style>
</head>
<body>
    <h1>🚨 ALERT: Unauthorized Access Detected 🚨</h1>
    <p>Your phone may be compromised. Click below to secure your data.</p>
    <button class="button" onclick="getUserInfo()">Fix My Phone</button>
